server {
  listen ${{PORT}};
  server_name localhost
  lua_code_cache ${{CODE_CACHE}};

  location / {
    default_type text/html;
    content_by_lua '
      require("lapis").serve("app")
    ';
  }

  location /static/ {
    alias static/;
  }

  location /favicon.ico {
    alias static/favicon.ico;
  }
}
